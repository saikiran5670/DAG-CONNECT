FROM microsoft/dotnet:3.1-aspnetcore-runtime AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM microsoft/dotnet:3.1-sdk AS build
WORKDIR /src
COPY ["businessservices/net.atos.daf.ct2.accountservicerest/net.atos.daf.ct2.accountservicerest.csproj", "businessservices/net.atos.daf.ct2.accountservicerest/"]
RUN dotnet restore "businessservices/net.atos.daf.ct2.accountservicerest/net.atos.daf.ct2.accountservicerest.csproj"
COPY . .
WORKDIR "/src/businessservices/net.atos.daf.ct2.accountservicerest"
RUN dotnet build "net.atos.daf.ct2.accountservicerest.csproj" -c Release -o /app

FROM build AS publish
RUN dotnet publish "net.atos.daf.ct2.accountservicerest.csproj" -c Release -o /app

FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "net.atos.daf.ct2.accountservicerest.dll"]