#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/core/runtime:3.1-buster-slim AS base
WORKDIR /app

FROM mcr.microsoft.com/dotnet/core/sdk:3.1-buster AS build
WORKDIR /src
COPY ["dataservices/net.atos.daf.ct2.tcuprovisioningdataservice/TCUProvisioning/net.atos.daf.ct2.tcuprovisioningdataservice.csproj", "dataservices/net.atos.daf.ct2.tcuprovisioningdataservice/TCUProvisioning/"]
RUN dotnet restore "dataservices/net.atos.daf.ct2.tcuprovisioningdataservice/TCUProvisioning/net.atos.daf.ct2.tcuprovisioningdataservice.csproj"
COPY . .
WORKDIR "/src/dataservices/net.atos.daf.ct2.tcuprovisioningdataservice/TCUProvisioning"
RUN dotnet build "net.atos.daf.ct2.tcuprovisioningdataservice.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "net.atos.daf.ct2.tcuprovisioningdataservice.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "net.atos.daf.ct2.tcuprovisioningdataservice.dll"]