#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/core/aspnet:3.1-buster-slim AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/core/sdk:3.1-buster AS build
WORKDIR /src
COPY ["commonservices/net.atos.daf.ct2.auditservice/net.atos.daf.ct2.auditservice.csproj", "commonservices/net.atos.daf.ct2.auditservice/"]
COPY ["commoncomponent/net.atos.daf.ct2.audit/net.atos.daf.ct2.audit.csproj", "commoncomponent/net.atos.daf.ct2.audit/"]
COPY ["commoncomponent/net.atos.daf.ct2.data/net.atos.daf.ct2.data.csproj", "commoncomponent/net.atos.daf.ct2.data/"]
COPY ["commoncomponent/net.atos.daf.ct2.utilities/net.atos.daf.ct2.utilities.csproj", "commoncomponent/net.atos.daf.ct2.utilities/"]
RUN dotnet restore "commonservices/net.atos.daf.ct2.auditservice/net.atos.daf.ct2.auditservice.csproj"
COPY . .
WORKDIR "/src/commonservices/net.atos.daf.ct2.auditservice"
RUN dotnet build "net.atos.daf.ct2.auditservice.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "net.atos.daf.ct2.auditservice.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
RUN mkdir log
RUN mkdir log/Error
RUN mkdir log/Info
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "net.atos.daf.ct2.auditservice.dll"]