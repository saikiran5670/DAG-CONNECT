# Stage 1
FROM node:14-alpine as build-step
RUN mkdir -p /app
WORKDIR /app
COPY package.json /app
RUN npm install
COPY . /app
RUN ls /app
RUN npm run build --prod

# Stage 2
FROM nginxinc/nginx-unprivileged:1.18-alpine
RUN mkdir /usr/share/nginx/tmp && mv /usr/share/nginx/*.html /usr/share/nginx/tmp/
COPY --from=build-step /app/dist/ngHereApp-gzip /usr/share/nginx/html
COPY --from=build-step /app/nginx.conf /etc/nginx/